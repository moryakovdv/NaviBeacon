<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#14273D">
    
    <!-- Top bar layout -->
    <LinearLayout android:id="@+id/location_info__top_layout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="0dp"
        android:background="#14273D">
        
        <Button android:id="@+id/location_info__back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:onClick="onBackButtonClicked"
            android:background="@drawable/btn_arrow_back"/>
            
        <TextView android:id="@+id/location_info__title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"/>
        
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"/>
            
    </LinearLayout>
    
    <!-- Main layout -->
    <LinearLayout android:id="@+id/location_info__main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        android:background="#E6E6E6">
        
        <!-- Map image view -->
        <ImageView android:id="@+id/location_info__map_image"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_margin="10dp"
            android:background="#CECECE"/>
        
        <!-- Sublocation -->
        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">
            
            <TextView android:id="@+id/location_info__sublocation_prompt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="20sp"
                android:textColor="#14273D"
                android:text="Подраздел"/>
            
            <TextView android:id="@+id/location_info__sublocation_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="20sp"
                android:textColor="#14273D"
                android:text="-"/>
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_margin="10dp"
            android:background="#CECECE"/>
        
        <!-- Size -->
        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">
            
            <TextView android:id="@+id/location_info__size_prompt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="20sp"
                android:textColor="#14273D"
                android:text="Размер"/>
            
            <TextView android:id="@+id/location_info__size_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="20sp"
                android:textColor="#14273D"
                android:text="-"/>
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_margin="10dp"
            android:background="#CECECE"/>
        
        <!-- Version -->
        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">
            
            <TextView android:id="@+id/location_info__version_prompt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="20sp"
                android:textColor="#14273D"
                android:text="Версия"/>
            
            <TextView android:id="@+id/location_info__version_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="20sp"
                android:textColor="#14273D"
                android:text="-"/>
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_margin="10dp"
            android:background="#CECECE"/>
        
    </LinearLayout> <!-- Main layout -->
    
    
</RelativeLayout>
